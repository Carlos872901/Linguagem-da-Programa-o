    <style>
        button {
        padding: 12px 25px;
        margin: 8px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;   
        box-shadow: 0 12px 14px rgba(0,0,0,0.2);
    }
